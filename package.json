{
  "name": "@nirholas/universal-crypto-mcp",
  "version": "0.1.0",
  "description": "Universal MCP server for all EVM-compatible networks including BSC, opBNB, Arbitrum, Ethereum, Polygon, Base, Optimism and more.",
  "type": "module",
  "main": "./dist/lib.js",
  "exports": {
    ".": {
      "import": "./dist/lib.js"
    }
  },
  "scripts": {
    "start": "node dist/index.js",
    "start:sse": "npm run start -- --sse",
    "dev:sse": "tsx watch src/index.ts --sse",
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "npx @modelcontextprotocol/inspector tsx src/index.ts",
    "format": "prettier --write ."
  },
  "bin": {
    "universal-crypto-mcp": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "nich",
    "url": "https://x.com/nichxbt"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nirholas/universal-crypto-mcp"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "evm",
    "ethereum",
    "arbitrum",
    "polygon",
    "base",
    "optimism",
    "bsc",
    "crypto",
    "defi",
    "blockchain",
    "web3"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "mime": "^4.0.7",
    "reflect-metadata": "^0.2.2",
    "viem": "^2.27.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.0.0",
    "prettier": "3.2.4",
    "tsup": "^8.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
